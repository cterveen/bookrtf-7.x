          }
        }
        $replace .=  "{" . $props["content"] . "}\\cell";
      }
      $replace .= "\\row\r\n";
    }
    $replace .= "}\r\n";

    $content = substr_replace($content, $replace, $tables[$tid]['start'], $tables[$tid]['length']);
